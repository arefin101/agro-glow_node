<div class="container">

    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Edit <%= productInformation[0].userName %></h1>
                        </div>
                        <form class="user" method="post">
                            <div class="form-group">
                                    <input type="text" class="form-control form-control-user" id="exampleName"
                                        placeholder="First Name" name ="name" value="<%= productInformation[0].productName %> ">
                            </div>
                            <div class="form-group">
                                <input type="hidden" class="form-control form-control-user" id="exampleInputuserName"
                                    placeholder="User Name" name="description" value="<%= productInformation[0].description %>">
                            </div>
                            <div class="form-group">
                                <input type="email" class="form-control form-control-user" id="exampleInputEmail"
                                    placeholder="Email Address" name="category" value="<%= productInformation[0].category %>">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control form-control-user" id="exampleInputDOB"
                                    placeholder="Date of Birth" name="expDate" value="<%= productInformation[0].expDate %>">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control form-control-user" id="exampleInputphoneNo"
                                    placeholder="Phone Number" name="price" value="<%= productInformation[0].price %>">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control form-control-user" id="exampleInputphoneNo"
                                    placeholder="Phone Number" name="quantity" value="<%= productInformation[0].quantity %>">
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control form-control-user" id="exampleInputphoneNo"
                                    placeholder="Phone Number" name="imgURL" value="<%= productInformation[0].imgURL %>">
                            </div>
                            <hr>
                            <!-- <a href="/login/register" class="btn btn-primary btn-user btn-block">
                                Update Account
                            </a> -->
                            <button class="btn btn-primary btn-user btn-block">Edit Seller</button>
                        </form>
                    
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>